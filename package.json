{
  "name": "voice-chat-ai",
  "version": "1.0.0",
  "description": "Voice Chat AI Application with Speech-to-Text and OpenAI integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "client:build": "cd client && npm run build",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "build": "npm run client:build"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "voice",
    "ai",
    "speech-to-text",
    "openai",
    "react"
  ],
  "author": "",
  "license": "MIT"
}
